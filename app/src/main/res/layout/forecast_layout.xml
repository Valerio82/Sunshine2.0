<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    >


    <ImageView
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/textViewGiorno"
        android:textAppearance="?android:textAppearanceLarge"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/imageView"
        android:layout_toEndOf="@+id/imageView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/textViewCondizioniMeteo"
        android:textAppearance="?android:textAppearanceSmall"
        android:layout_below="@+id/textViewGiorno"
        android:layout_alignLeft="@+id/textViewGiorno"
        android:layout_alignStart="@+id/textViewGiorno" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/textViewTemperaturaMax"
        android:textAppearance="?android:textAppearanceLarge"
        android:gravity="center"
        android:layout_above="@+id/textViewCondizioniMeteo"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:textAppearance="?android:textAppearanceSmall"
        android:gravity="center"
        android:id="@+id/textViewTemperaturaMin"
        android:layout_below="@+id/textViewTemperaturaMax"
        android:layout_alignLeft="@+id/textViewTemperaturaMax"
        android:layout_alignStart="@+id/textViewTemperaturaMax" />

</RelativeLayout>